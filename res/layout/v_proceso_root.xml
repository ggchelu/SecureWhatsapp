       	<ImageView android:id="@+id/ipaso4" 
        android:layout_width="70dp" 
        android:layout_height="80dp" 
        android:src="@drawable/check" 
        android:scaleType="fitXY" />  
       	
       	<ProgressBar android:id="@+id/ppaso4" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:indeterminateDrawable="@drawable/loader"/>
       	
       	<TextView android:id="@+id/paso4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Borrando datos residuales"
        android:textColor="#ffffff"/>
       	
      	<Button 
        android:id="@+id/bseguir" 
        android:layout_width="100dp" 
        android:layout_height="50dp" 
        android:background="@drawable/boton_azul"
        android:text="Listo"
        android:textColor="#ffffff"
        android:shadowColor="#23486d"
       	android:shadowRadius="1.5"  
       	android:shadowDx="1"  
       	android:shadowDy="1"/>
       	
    </RelativeLayout>
</LinearLayout>